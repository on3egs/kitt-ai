[Unit]
Description=K.I.T.T. Face Recognition (direct)
After=bluetooth.target
Wants=bluetooth.target

[Service]
Type=simple
User=kitt
WorkingDirectory=/home/kitt/kitt-ai/driver
ExecStart=/usr/bin/python3 /home/kitt/kitt-ai/driver/recognition.py
Restart=on-failure
RestartSec=15
Environment=HOME=/home/kitt
Environment=DISPLAY=:0
Environment=LD_LIBRARY_PATH=/home/kitt/CTranslate2/install/lib

[Install]
WantedBy=multi-user.target
